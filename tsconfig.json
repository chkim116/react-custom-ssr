{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["dom", "esnext"],
        "strict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "./src",
        "typeRoots": ["src/types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "**/*.js"]
}
